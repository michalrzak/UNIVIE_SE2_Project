<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.clemy.androidapps.expense">

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Expense">
        <activity
            android:name=".ui.newtransaction.NewTransactionActivity"
            android:exported="false"
            android:label="New Transaction"
            android:parentActivityName=".ui.transactionlist.TransactionListActivity" />
        <activity
            android:name=".ui.transactionlist.TransactionListActivity"
            android:exported="false"
            android:parentActivityName=".ui.accountlist.AccountListActivity" />
        <activity
            android:name=".ui.newaccount.NewAccountActivity"
            android:exported="false"
            android:label="New Account"
            android:parentActivityName=".ui.accountlist.AccountListActivity" />
        <activity
            android:name=".ui.accountlist.AccountListActivity"
            android:exported="true"
            android:label="Accounts">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>